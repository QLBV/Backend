        },
        {
          "name": "Check-in Appointment (Receptionist)",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/appointments/{{appointment_id}}/check-in",
              "host": ["{{base_url}}"],
              "path": ["api", "appointments", "{{appointment_id}}", "check-in"]
            }
          }
        }
      ]
    },
